<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>mm-expenses-manager-product</artifactId>
        <groupId>mm-expenses-manager</groupId>
        <version>0.2.6-SNAPSHOT</version>
    </parent>

    <name>Expenses Manager Product Api</name>
    <description>Product service responsible for products preparation and management.</description>

    <packaging>jar</packaging>

    <artifactId>mm-expenses-manager-product-api</artifactId>
    <version>0.2.6-SNAPSHOT</version>

    <properties>
        <!-- API config -->
        <api-generation-path>${project.basedir}/schema</api-generation-path>
        <api-package>mm.expenses.manager.product.api</api-package>
    </properties>

    <build>
        <plugins>
            <!-- Maven plugins -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok-version}</version>
                        </path>
                        <path>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot-configuration-processor</artifactId>
                            <version>${spring-boot-version}</version>
                        </path>
                    </annotationProcessorPaths>
                    <source>${java-version}</source>
                    <target>${java-version}</target>
                </configuration>
            </plugin>

            <!-- OpenAPI plugins -->
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <executions>
                    <!-- Products API -->
                    <execution>
                        <id>product-schema</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>

                        <configuration>
                            <generatorName>spring</generatorName>
                            <generateSupportingFiles>false</generateSupportingFiles>

                            <inputSpec>${api-generation-path}/product-schema.yml</inputSpec>
                            <packageName>${api-package}.product</packageName>
                            <invokerPackage>${api-package}.product</invokerPackage>
                            <apiPackage>${api-package}.product</apiPackage>
                            <modelPackage>${api-package}.product.model</modelPackage>

                            <typeMappings>
                                <typeMapping>OffsetDateTime=Instant</typeMapping>
                            </typeMappings>

                            <importMappings>
                                <importMapping>java.time.OffsetDateTime=java.time.Instant</importMapping>
                                <importMapping>BigDecimal=java.math.BigDecimal</importMapping>
                            </importMappings>

                            <templateDirectory>
                                ${project.basedir}/src/main/resources/templates
                            </templateDirectory>

                            <configOptions>
                                <useJakartaEe>true</useJakartaEe>
                                <interfaceOnly>true</interfaceOnly>
                                <hideGenerationTimestamp>true</hideGenerationTimestamp>
                                <openApiNullable>false</openApiNullable>
                                <serializableModel>true</serializableModel>
                                <skipDefaultInterface>true</skipDefaultInterface>
                                <useTags>true</useTags>
                                <useResponseEntity>true</useResponseEntity>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>